<Window x:Class="WPFApp_EntityFramework.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp_EntityFramework"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="343" Width="635">
    <Grid>
        <Label Content="Đăng nhập hệ thống" FontSize="20
               " HorizontalAlignment="Left" Margin="73,24,0,0" VerticalAlignment="Top"/>
        <Label Content="Email:" FontSize="20" HorizontalAlignment="Left" Margin="73,106,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" FontSize="20" Margin="146,110,0,0" TextWrapping="Wrap" Text="admin@CompanyName.com" VerticalAlignment="Top" Width="330"/>
        <Label Content="Password:" FontSize="20" HorizontalAlignment="Left" Margin="38,148,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" Password="@1" HorizontalAlignment="Left" FontSize="20" Margin="146,0,0,0" VerticalAlignment="Center" Width="330"/>
        <Button x:Name="btnLogin" Content="Login" FontSize="20" HorizontalAlignment="Left" Margin="206,224,0,0" VerticalAlignment="Top" Click="btnLogin_Click"/>
        <Button x:Name="btnExit" Content="Exit" FontSize="20" HorizontalAlignment="Left" Margin="318,224,0,0" VerticalAlignment="Top" Click="btnExit_Click"/>

    </Grid>
</Window>
