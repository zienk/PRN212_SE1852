<Window x:Class="WPFApp_EntityFramework.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp_EntityFramework"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Đổi mật khẩu" FontSize="20
           " HorizontalAlignment="Left" Margin="73,24,0,0" VerticalAlignment="Top"/>
        <Label Content="Email:" FontSize="20" HorizontalAlignment="Left" Margin="73,106,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" FontSize="20" Margin="146,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="330"/>
        <Label Content="Password:" FontSize="20" HorizontalAlignment="Left" Margin="38,148,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtNewPassword" Password="" HorizontalAlignment="Left" FontSize="20" Margin="146,156,0,0" VerticalAlignment="Top" Width="330"/>
        <Button x:Name="btnChangePassword" Content="Đổi mật khẩu" FontSize="20" HorizontalAlignment="Left" Margin="213,264,0,0" VerticalAlignment="Top" Click="btnChangePassword_Click"/>
