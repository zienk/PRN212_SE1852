<Window x:Class="MyStoreWpfApp_EntityFramework.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStoreWpfApp_EntityFramework"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="284" Width="614">
    <Grid>
        <Label Content="Đăng nhập hệ thống" FontSize="25" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top">
            <Label.Background>
                <LinearGradientBrush>
                    <GradientStop Offset="0.0" Color="Yellow"></GradientStop>
                    <GradientStop Offset="0.5" Color="Blue"></GradientStop>
                    <GradientStop Offset="1.0" Color="Red"></GradientStop>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Username:" FontSize="20" HorizontalAlignment="Left" Margin="68,82,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="205,86,0,0" TextWrapping="Wrap" Text="admin@CompanyName.com" FontSize="20" VerticalAlignment="Top" Width="336"/>
        <PasswordBox x:Name="txtPassword" FontSize="20
                     " HorizontalAlignment="Left" Margin="205,138,0,0" VerticalAlignment="Top" Width="336" RenderTransformOrigin="0.159,0.119" Password="@1" />
        <Label Content="Password:" FontSize="20" HorizontalAlignment="Left" Margin="68,134,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="Đăng nhập" FontSize="20" HorizontalAlignment="Left" Margin="205,191,0,0" VerticalAlignment="Top" Click="btnLogin_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" FontSize="20" HorizontalAlignment="Left" Margin="342,191,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
